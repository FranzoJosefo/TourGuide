<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        style="@style/LocationCardViewStyle"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/image"
                    style="@style/LocationImageStyle"
                    android:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/text_name"
                    style="@style/NameTextViewStyle"
                    tools:text="Unicenter" />

            </RelativeLayout>

            <TextView
                android:id="@+id/text_description"
                style="@style/DescriptionTextViewStyle"
                tools:text="Unicenter is a major shopping and entertainment complex in Greater Buenos Aires, Argentina. " />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/text_description"
                android:background="#cccccc" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text_addressDefault"
                    style="@style/AddressLabelStyle"
                    android:text="Address: " />

                <TextView
                    android:id="@+id/text_address"
                    style="@style/LocationAddressStyle"
                    tools:text="Paraná 3745, Martínez, BA" />

                <TextView
                    android:id="@+id/text_DefaultHour"
                    style="@style/OpenLabelStyle"
                    android:text="Open: " />

                <LinearLayout
                    android:id="@+id/open_hour_container"
                    style="@style/HourContainerStyle">

                    <TextView
                        android:id="@+id/text_hours"
                        style="@style/OpenHourTextView"
                        android:visibility="visible"
                        tools:text="Mon - Fri / 09AM - 23PM" />

                    <TextView
                        android:id="@+id/text_hours_two"
                        style="@style/OpenHourTextView"
                        tools:text="Mon - Fri / 09AM - 23PM" />

                    <TextView
                        android:id="@+id/text_hours_three"
                        style="@style/OpenHourTextView"
                        tools:text="Mon - Fri / 09AM - 23PM" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>







