<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/primary_dark_color</item>
        <item name="colorAccent">@color/primary_color</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@color/primary_color</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/tab_selected_text_color</item>
        <item name="tabMode">fixed</item>
        <item name="tabTextColor">@color/tab_unselected_text_color</item>
        <item name="tabSelectedTextColor">@color/tab_selected_text_color</item>
    </style>

    <style name="OpenHourTextView">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Small</item>
    </style>


</resources>
